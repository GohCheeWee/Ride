<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/add_bank_account_dialog_parent_layout"
    android:background="@color/white"
    android:padding="10dp"
    android:layout_height="match_parent">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:src="@drawable/acitivty_main_user"
        android:id="@+id/chat_room_dialog_receive_view_user_icon"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_room_dialog_custom_receive_text_view"
        android:textColor="@color/black"
        android:padding="10dp"
        android:gravity="start"
        android:layout_marginStart="10dp"
        android:id="@+id/chat_room_dialog_receive_view_message"
        android:layout_toEndOf="@id/chat_room_dialog_receive_view_user_icon"
        android:fontFamily="@string/font_family_condensed"
        android:text="HAHA!!" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/transparent_black"
        android:padding="10dp"
        android:textSize="12sp"
        android:id="@+id/chat_room_dialog_receive_view_date"
        android:fontFamily="@string/font_family_condensed"
        android:layout_toEndOf="@id/chat_room_dialog_receive_view_message"
        android:text="4:28pm" />

</RelativeLayout>


