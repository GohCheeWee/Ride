<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background_white"
    android:gravity="center_horizontal"
    android:id="@+id/activity_profile_main_layout"
    android:layout_height="match_parent">

    <include
        layout="@layout/actionbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"/>

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="130dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:id="@+id/edit_profile_dialog_profile_picture"
            android:src="@drawable/acitivty_main_user"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/edit_profile_dialog_title"
            android:src="@drawable/edit_profile_dialog_camera_icon"
            android:id="@+id/fragment_navigation_drawer_user_profile_edit_image"/>

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:id="@+id/edit_profile_dialog_profile_username"
        android:textSize="22sp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/edit_profile_dialog_name"
        android:id="@+id/activity_profile_gender_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:layout_height="70dp">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="4.50"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="5dp"
                android:fontFamily="@string/font_family_condensed"
                android:textColor="@color/grey"
                android:id="@+id/edit_profile_dialog_profile_rating"
                android:layout_height="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="18sp"
                android:fontFamily="@string/font_family_condensed"
                android:id="@+id/edit_profile_dialog_profile_review"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:text="@string/activity_profile_rating"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:background="#30000000"
            android:layout_marginTop="25dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:text="0"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="5dp"
                android:id="@+id/edit_profile_dialog_profile_cancellation"
                android:fontFamily="@string/font_family_condensed"
                android:textColor="@color/grey"
                android:layout_height="40dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="18sp"
                android:fontFamily="@string/font_family_condensed"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:text="@string/edit_profile_dialog_label_completed_route"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#30000000"/>

    <!--_________________________________________________Sroll view __________________________________-->
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_height="?actionBarSize">

                <com.jby.ride.others.SquareHeightLinearLayout
                    android:layout_width="match_parent"
                    android:padding="20dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/activity_user_profile_user_icon"
                        android:contentDescription="@string/edit_profile_dialog_name"
                        android:layout_height="match_parent"
                        />

                </com.jby.ride.others.SquareHeightLinearLayout>

                <EditText
                    android:background="@drawable/activity_profile_custom_edit_text"
                    android:layout_width="match_parent"
                    android:text=""
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:id="@+id/edit_profile_dialog_profile_edit_text_username"
                    android:hint="@string/activity_register_editext_username"
                    android:gravity="center_vertical"
                    android:fontFamily="@string/font_family_condensed"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="#30000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_height="?actionBarSize">

                <com.jby.ride.others.SquareHeightLinearLayout
                    android:layout_width="match_parent"
                    android:padding="20dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/activity_user_profile_phone_icon"
                        android:contentDescription="@string/edit_profile_dialog_name"
                        android:layout_height="match_parent"
                        />

                </com.jby.ride.others.SquareHeightLinearLayout>

                <EditText
                    android:background="@drawable/activity_profile_custom_edit_text"
                    android:layout_width="wrap_content"
                    android:text="@string/activity_register_editext_phone_prefix"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:enabled="false"
                    android:id="@+id/edit_profile_dialog_profile_edit_text_prefix"
                    android:hint="@string/activity_register_editext_mobile"
                    android:gravity="center_vertical"
                    android:fontFamily="@string/font_family_condensed"
                    android:layout_height="match_parent" />

                <EditText
                    android:background="@drawable/activity_profile_custom_edit_text"
                    android:layout_width="match_parent"
                    android:text=""
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:id="@+id/edit_profile_dialog_profile_edit_text_mobile"
                    android:hint="@string/activity_register_editext_mobile"
                    android:gravity="center_vertical"
                    android:fontFamily="@string/font_family_condensed"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="#30000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_height="?actionBarSize">

                <com.jby.ride.others.SquareHeightLinearLayout
                    android:layout_width="match_parent"
                    android:padding="20dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/edit_profile_dialog_name"
                        android:src="@drawable/activity_user_profile_email_icon" />

                </com.jby.ride.others.SquareHeightLinearLayout>

                <EditText
                    android:background="@drawable/activity_profile_custom_edit_text"
                    android:layout_width="match_parent"
                    android:text=""
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:enabled="false"
                    android:id="@+id/edit_profile_dialog_profile_edit_text_email"
                    android:hint="@string/activity_register_editext_email"
                    android:gravity="center_vertical"
                    android:fontFamily="@string/font_family_condensed"
                    android:maxLines="1"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="#30000000"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/activity_login_custom_button"
                android:text="@string/edit_profile_dialog_label_save"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:id="@+id/edit_profile_dialog_save_button"
                android:fontFamily="@string/font_family_condensed"
                android:layout_marginTop="?actionBarSize"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>